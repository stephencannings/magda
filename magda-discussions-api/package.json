    "retag-and-push": "retag-and-push"
  },
  "dependencies": {
    "@magda/typescript-common": "^0.0.45-0",
    "body-parser": "^1.13.2",
    "express": "^4.13.1",
    "isomorphic-fetch": "^2.2.1",
    "isomorphic-form-data": "^1.0.0",
    "lodash": "^4.17.4",
    "pg": "^6.4.0",
    "tsmonad": "^0.7.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@magda/scripts": "^0.0.45-0",
    "@types/express": "^4.0.35",
    "@types/lodash": "^4.14.64",
    "@types/node": "^8.0.14",
    "@types/pg": "^6.1.40",
    "@types/yargs": "^8.0.2",
    "typescript": "~2.5.0"
  },
  "config": {
    "docker": {
      "name": "data61/magda-discussions-api",
