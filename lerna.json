{
  "lerna": "2.5.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["deploy/", "magda-*", "scripts/"],
  "version": "0.0.45-0",
  "hoist": [
    "tsmonad",
    "urijs",
    "@types/urijs",
    "express",
    "@types/express",
    "@types/supertest",
    "pretty-quick",
    "prettier",
    "eslint",
    "eslint-plugin-prettier",
    "eslint-plugin-import",
    "eslint-plugin-flowtype",
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-react",
    "eslint-config-react-app",
    "babel-eslint"
  ],
  "commands": {
    "docker-build-prod": {
      "ignore": [
        "magda-authorization-db",
        "magda-discussions-db",
        "magda-authorization-api",
        "magda-discussions-api"
      ]
    }
  }
}
